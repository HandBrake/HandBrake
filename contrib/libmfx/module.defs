LIBMFX.FETCH.url       = https://github.com/HandBrake/HandBrake-contribs/releases/download/contribs/mfx_dispatch-1.35.1.tar.gz
LIBMFX.FETCH.url      += https://github.com/lu-zero/mfx_dispatch/archive/refs/tags/1.35.1.tar.gz
LIBMFX.FETCH.sha256    = 673636da98a4fd5c3e3dc5267da5429e986f53089ed6c33cdca5751f56d9416b
LIBMFX.FETCH.basename  = mfx_dispatch-1.35.1.tar.gz
LIBMFX.EXTRACT.tarbase = mfx_dispatch-1.35.1

LIBMFX.CONFIGURE.bootstrap = rm -fr aclocal.m4 autom4te.cache; autoreconf -fiv;

ifneq (linux,$(HOST.system))
LIBMFX.CONFIGURE.extra = --without-libva_drm --without-libva_x11
