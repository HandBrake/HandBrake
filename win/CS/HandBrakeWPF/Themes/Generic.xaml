    <SolidColorBrush x:Key="Ui.ContrastLight" />
    <SolidColorBrush x:Key="Ui.Ultralight" />
    <SolidColorBrush x:Key="Ui.UltraLight2" />
    <SolidColorBrush x:Key="Ui.ListBoxSelect" />
    <SolidColorBrush x:Key="Ui.Arrow" />
