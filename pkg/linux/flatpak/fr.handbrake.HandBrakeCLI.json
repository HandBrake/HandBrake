{
    "app-id": "fr.handbrake.HandBrakeCLI",
    "runtime": "org.gnome.Platform",
    "runtime-version": "3.20",
    "sdk": "org.gnome.Sdk",
    "command": "HandBrakeCLI",
    "finish-args": [
        /* Needs video */
        "--filesystem=xdg-videos",
        /* Home */
        "--filesystem=home"
    ],
    "modules": [
        {
            "name": "handbrake",
            "no-autogen": true,
            "config-opts": ["--flatpak"],
            "builddir": true,
            "post-install": ["rm /app/bin/ghb", "rm -r /app/share"],
            "sources": [
                {
                    "type": "archive",
                    "path": "handbrake.tar.bz2",
                    "strip-components": 1
                },
                {
                    "type": "archive",
                    "path": "download.tgz",
                    "strip-components": 0
                }
            ]
        }
    ]
}

